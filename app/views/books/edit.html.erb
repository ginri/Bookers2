<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <p id="notice">
          <% if @book.errors.any? %>
          <%= @book.errors.count %>error prohibited this obj from being saved:
          <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
          <% end %>
        </p>
        <h1>Editing Book</h1>
        <%= form_with model: @book, method: :patch do |f| %>
          <%= f.label :Title %>
          <%= f.text_field :title, class:"form-control" %>
          <%= f.label :Opinion %>
          <%= f.text_area :body, class:"form-control" %></br>
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        <% end %>
        <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>