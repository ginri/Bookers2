<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <p id="notice">
          <% if @user.errors.any? %>
          <%= @user.errors.count %>error prohibited this obj from being saved:
          <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
          <% end %>
        </p>
        <h1>User info</h1>
        <%= form_with model: @user, method: :patch do |f| %>
          <%= f.label :Name %>
            <%= f.text_field :name, class:"form-control" %>
          <%= f.label :Image %>
            <%= f.file_field :profile_image, class: "form-control-file user_image", accept: "image/*" %>
          <%= f.label :Introduction %>
            <%= f.text_area :introduction, class:"form-control" %></br>
            <%= f.submit 'Update User', class:"btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</main>